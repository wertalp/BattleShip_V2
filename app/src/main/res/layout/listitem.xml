<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:orientation="vertical"
    android:background="@drawable/border_thin"
    android:id="@+id/ll"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/cross"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/checkBox"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHIP"

        android:id="@+id/checkBox"
        android:checked="true" />

    <ImageView
        android:id="@+id/avatar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ship_small"
        android:layout_marginStart="32dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/position"
        android:layout_above="@+id/position" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT Developer"
        android:textColor="#ff3739cc"
        style="@style/Theme.AppCompat.Light"
        android:nestedScrollingEnabled="true"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/txtNr"
        android:layout_alignBottom="@+id/txtNr"
        android:layout_toStartOf="@+id/avatar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wertal Patrick"
        android:paddingTop="10dp"
        android:textColor="#ff3739cc"
        android:textSize="10sp"
        style="@style/Theme.AppCompat.Light"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignEnd="@+id/position" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtNr"
        android:text="NR"
        android:layout_below="@+id/name"
        android:layout_toStartOf="@+id/avatar1"
        android:layout_marginTop="59dp" />


</RelativeLayout>